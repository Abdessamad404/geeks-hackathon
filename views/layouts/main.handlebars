<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}} - Vintage Vibe</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <header>
      <div class="container">
        <div class="header-content">
          <!-- Left: Logo -->
          <div class="logo">
            <img
              src="/images/logo.jpg?v=1"
              alt="Vintage Vibe Logo"
              class="logo-image"
            />
            <div class="logo-text">
              <h1>Vintage Vibe</h1>
              <p class="tagline">Retro. Revisited.</p>
            </div>
          </div>

          <!-- Center: Navigation -->
          <nav class="nav-center">
            <a href="/">Home</a>
            <a href="/products">Products</a>
            <a href="/about">About</a>
            <a href="/contact">Contact</a>
          </nav>

          <!-- Right: User Menu -->
          <div class="nav-right">
            <!-- Cart Icon -->
            <a
              href="#"
              class="cart-icon"
              onclick="showCartMessage(); return false;"
            >
              ðŸ›’
              <span class="cart-count">0</span>
            </a>
            {{#if user}}
              <span class="user-greeting">Hi, {{user.name}}</span>
              <a href="/logout" class="logout-btn">Logout</a>
            {{else}}
              <a href="/login" class="login-btn">Login</a>
            {{/if}}
          </div>
        </div>
      </div>
    </header>

    <main>
      {{{body}}}
    </main>

    <footer>
      <div class="container">
        <p>&copy; 2024 Vintage Vibe. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>