<div class="container">
    <h2>Our Collection</h2>
    
    <!-- Search and Filters -->
    <div class="filters">
        <h3>Search & Filter</h3>
        <form id="filterForm" method="GET" action="/products">
            <div class="filter-group">
                <input 
                    type="text" 
                    name="search" 
                    placeholder="Search products..." 
                    value="{{search}}"
                >
                
                <select name="category">
                    <option value="">All Categories</option>
                    <option value="Electronics" {{#if (eq category 'Electronics')}}selected{{/if}}>Electronics</option>
                    <option value="Fashion" {{#if (eq category 'Fashion')}}selected{{/if}}>Fashion</option>
                    <option value="Home Decor" {{#if (eq category 'Home Decor')}}selected{{/if}}>Home Decor</option>
                    <option value="Collectibles" {{#if (eq category 'Collectibles')}}selected{{/if}}>Collectibles</option>
                    <option value="Gaming" {{#if (eq category 'Gaming')}}selected{{/if}}>Gaming</option>
                </select>
                
                <select name="color">
                    <option value="">All Colors</option>
                    <option value="Black" {{#if (eq color 'Black')}}selected{{/if}}>Black</option>
                    <option value="Brown/Wood" {{#if (eq color 'Brown/Wood')}}selected{{/if}}>Brown/Wood</option>
                    <option value="Silver/Chrome" {{#if (eq color 'Silver/Chrome')}}selected{{/if}}>Silver/Chrome</option>
                    <option value="Gold/Brass" {{#if (eq color 'Gold/Brass')}}selected{{/if}}>Gold/Brass</option>
                    <option value="Colorful/Multi" {{#if (eq color 'Colorful/Multi')}}selected{{/if}}>Colorful/Multi</option>
                </select>
                
                <button type="submit" class="btn">Filter</button>
            </div>
        </form>
    </div>
    
    <!-- Products Grid -->
    {{#if products.length}}
        <div class="products-grid">
            {{#each products}}
            <a href="/products/{{this._id}}" style="text-decoration: none; color: inherit;">
                <div class="product-card">
                    <img src="{{this.image}}" alt="{{this.name}}" class="product-image">
                    <div class="product-info">
                        <h3>{{this.name}}</h3>
                        <p>{{this.description}}</p>
                        
                        <div class="product-meta">
                            <span class="price">{{this.price}}</span>
                            {{#if this.year}}
                                <span class="badge">{{this.year}}</span>
                            {{/if}}
                        </div>
                        
                        <div class="product-meta" style="margin-top: 10px;">
                            <span class="badge">{{this.category}}</span>
                            <span class="badge">{{this.condition}}</span>
                        </div>
                    </div>
                </div>
            </a>
            {{/each}}
        </div>
    {{else}}
        <div class="no-products">
            <h3>No products found</h3>
            <p>Try adjusting your filters or search terms.</p>
        </div>
    {{/if}}
</div>